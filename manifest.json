{

  "manifest_version": 2,
  "name": "WaterfallAutotag",
  "version": "1.2",

  "description": "Automagicly add tags to repours",

  "content_scripts": [
    {
      "matches": ["*://waterfall.social/*"],
      "js": ["autotag.js"]
    }
  ],

  "options_ui": {
    "page": "options.html"
  },

  "browser_action": {
    "default_icon": "icon.svg",
    "default_title": "Waterfall Autotag",
    "default_popup": "options.html"
  },

  "permissions": [
      "storage"
    ],

  "browser_specific_settings": {
    "gecko": {
      "id": "autotag@beefox.xyz"
    }
  },

  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  }

}